                         .-'`                               `.-'`
                     _. -`         L            '          .'
                   .'           U                  '- ._.-'
                 /`          C                         /
                /         y                           |
          ._   ;       J                         |    |
           )).-|                     |           |    /
          (/`.-|                \    \           /  .;
          ( (_)|                 |    \         ; .' |
           '--';                 |    `\       / /   |
                \                |      `\    /.'   /
                 \               /        ;  |`\   |
                  '.           .'      _.-|  |  |  |
                    '-.     .-';_"---'`.__|  |  |  \
                       `'-._     ``'-.    |  \  \__\\
                            `''--.___\\   \__\\

